      <ul class="nav navbar-nav navbar-right">
        <li><a href="/users/helper">^_^您好！</a></li>
        <li class="dropdown">
          <a href="/users/<%=current_user.id%>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%=current_user.email%><span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">个人信息</a></li>
            <li><a href="#">修改密码</a></li>
            <li><a href="#">账户注销</a></li>
            <li class="divider"></li>
            <li><a href="" class="sign-out">登出系统</a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container-fluid">
<%= yield %>
</div>

<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container-fluid">
    <div class="navbar-right">
      <a class="navbar-brand" href="/">HostDragon Working Office.</a>
    </div>
  </div>
</nav>

</body>
</html>
