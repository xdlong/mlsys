<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><%=@organization.name%>产品目录</div>
  <div class="panel-body">
    <p>...</p>
  </div>
  <!-- List group -->
  <ul class="list-group">
    <li class="list-group-item">
      <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8 pull-left">
          <a href="/erp/orgs/<%=@organization.id%>/menus/new" type="button" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-plus"></i>新建</a>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="查找...">
            <span class="input-group-btn">
              <button class="btn btn-info" type="button"><i class="glyphicon glyphicon-search"></i></button>
            </span>
          </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
      </div><!-- /.row -->
    </li>
  </ul>

  <!-- Table -->
  <table class="table table-hover">
    <thead>
      <tr>
        <th width="10%" style="text-align:left">#</th>
        <th width="10%" style="text-align:left">类别</th>
        <th width="10%" style="text-align:left">标识码</th>
        <th width="20%" style="text-align:left">说明</th>
        <th width="20%" style="text-align:left">更新时间</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%- @menus.each_with_index do |menu,i|
            menu = menu.classification %>
      <tr>
        <td class="text_left"><%=i%></td>
        <td class="text_left"><%=menu.title %></td>
        <td class="text_left"><%=menu.code.code %></td>
        <td class="text_left"><%=menu.text %></td>
        <td class="text_left"><%=menu.updated_at.strftime("%Y-%2m-%2d %H:%M:%S") %></td>
        <td style="text-align:center">
          <span class="pull-right">
            <a href="/erp/orgs/<%=@organization.id%>/menus/<%=menu.id%>/edit">
              <i class="glyphicon glyphicon-edit"></i>
            </a>
            <a href="/erp/orgs/<%=@organization.id%>/menus/<%=menu.id%>">
              <i class="glyphicon glyphicon-info-sign"></i>
            </a>
            <%- if menu.component.present? %>
            <span class="erp_sub_menu_key" id="erp_menu_<%=i%>">
              <span class="badge">子目录：<%=menu.component.size%></span>
            </span>
            <% end -%>
            <a href="/erp/orgs/<%=@organization.id%>/menus/new?pre_menu_id=<%=menu.id%>">
              <i class="glyphicon glyphicon-plus"></i>
            </a>
          </span>
        </td>
      </tr>
      <%=raw render_menu(@organization,menu.component,[i]) %>
      <% end -%>
    </tbody>
  </table>
  <div class="panel-footer">
    <p>...</p>
  </div>
</div>
<script type="text/javascript">
  $(".erp_sub_menu_key").on('click',function(){
    var trs = $("."+this.id);
    console.log(trs);
    trs.each(function(){
      $(this).toggleClass("hidden");
    });
  })
</script>