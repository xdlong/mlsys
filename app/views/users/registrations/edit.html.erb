<h2>编辑 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "电子邮箱" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>账户认证邮箱：<%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "新密码" %> <i>（如果您不想修改该密码，此处不必填写。）</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "确认新密码" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "请输入您原来的密码" %> <i>(我们需要验证的您的身份。)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "提交" %>
  </div>
<% end %>

<h3>注销</h3>

<p>Unhappy? <%= button_to "注销", registration_path(resource_name), data: { confirm: "确定注销您的帐号 #{resource.email} ？" }, method: :delete %></p>

<%= link_to "返回", :back %>
